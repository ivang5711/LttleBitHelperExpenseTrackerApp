@page
@model AddModel

@using LittleBitHelperExpenseTracker.Models;

@{
    ViewData["Title"] = "Add";
}

<h4 style="margin: 20px; display: flex; justify-content: center">Add new record</h4>
<div style="margin: 20px; display: flex; justify-content: center">

    <form method="post">
        <input type="text" name="expenseType" style="display: block; padding: 12px 20px; margin: 8px 0" placeholder=" Expense Type...">
        <input type="text" name="expenseAmount" style="display: block; padding: 12px 20px; margin: 8px 0" placeholder=" Expense Amount...">
        <input type="text" name="expenseComment" style="display: block; padding: 12px 20px; margin: 8px 0" placeholder=" Expense Comment...">
        <input type="datetime-local" name="dateTime" style="display: block; padding: 12px 20px; margin: 8px 0" placeholder=" Date and Time...">
        <select id="currency" name="currency" style="display: block; padding: 12px 20px; margin: 8px 0" placeholder=" Currency...">
            <option value="@AddModel.DefaultCurrency">@AddModel.DefaultCurrency</option>
            @foreach (var item in JsonOperations.PersonPersistent.Rates.Keys)
            {
                <option value="@item">@item</option>
            }
        </select>

        <input type="submit" style="display: block; padding: 12px 20px; margin: 8px 0">
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
